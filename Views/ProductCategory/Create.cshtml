@model BuildingShopCore.Models.ProductCategory

@{
    ViewData["Title"] = "Добавление";
}

<h2>Создание категории</h2>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-md-start">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group">
                     <input type="submit" value="Добавить" class="my-custom-button" />
                     <a asp-action="Index" class="my-custom-link">Назад</a>
                </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
